{
    //* Required
    "breadcrumbs.enabled": true,

    "debug.openDebug": "openOnDebugBreak",

    "editor.codeLens": false,
    "editor.detectIndentation": false,
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.fontSize": 18,
    "editor.formatOnType": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.rulers": [
        80,
        120
    ],
    "editor.smoothScrolling": true,
    "editor.snippetSuggestions": "top",
    "editor.suggest.localityBonus": true,

    "extensions.autoUpdate": true,

    "files.associations": {
        ".csslintrc": "json",
        ".gitignore_global": "properties",
        ".minttyrc": "properties",
        "*.kwinrule": "properties",
        "*.rmd": "markdown",
        "*.sln": "properties",
        "grub": "properties"
    },
    "files.exclude": {
        "**/.classpath": true,
        "**/.DS_Store": true,
        "**/.factorypath": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.svn": true,
        "**/.vs": true,
        "**/bin": true,
        "**/CVS": true,
        "**/obj": true,
    },

    "[markdown]": {
        "editor.wordWrap": "off",
        "editor.quickSuggestions": false
    },

    "[plaintext]": {
        "editor.fontFamily": "Segoe UI for Windows & Liberation Serif for Linux",
        "editor.fontSize": 19,
        "editor.tabSize": 8,
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 150,
    },

    "spellright.documentTypes": [
        "csharp",
        "css",
        "html",
        "java",
        "json",
        "jsonc",
        "latex",
        "markdown",
        "plaintext",
        "powershell",
        "r",
    ],
    "spellright.groupDictionaries": false,
    "spellright.language": "en-CA for Windows & English (British) for Linux",

    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.fontSize": 16,
    // TODO: Replace File location
    "terminal.integrated.shell.windows": "path to bash.exe",

    "window.titleBarStyle": "custom for Windows & native for Linux",

    "workbench.colorCustomizations": {
        "[Default Dark+]": {
            "activityBar.background": "#2C2C2C",
            "editor.background": "#171717",
            "sideBar.background": "#1E1E1E",
            "statusBar.background": "#FE4A4977",
            "terminal.ansiBrightRed": "#FE0004",
            "terminal.ansiCyan": "#34DDDF",
            "terminal.ansiRed": "#FEA4A4",
            "terminal.ansiYellow": "#FEF729",
            "terminal.background": "#171717",
        }
    },
    "workbench.colorTheme": "Default Dark+",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.settings.editor": "json",

    //* C# (Base)
    "csharp.suppressHiddenDiagnostics": false,

    "docomment.activateOnEnter": true,

    "dotnet-test-explorer.autoExpandTree": true,
    "dotnet-test-explorer.showCodeLens": false,

    "razor.disabled": true,

    "[xml]": {
        "editor.tabSize": 2,
    },

    //* C# (.NET Core)
    "[razor]": {
        "editor.tabSize": 2,
    },

    //* CSS
    "css.lint.duplicateProperties": "warning",

    //* Editor Visual Enhancements
    "better-comments.tags": [
        {
            "tag": "!",
            "color": "#FE4A49",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "?",
            "color": "#3498DB",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "//",
            "color": "#606060",
            "strikethrough": true,
            "backgroundColor": "transparent"
        },
        {
            "tag": "todo",
            "color": "#FF8C00",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "*",
            "color": "#98C379",
            "strikethrough": false,
            "backgroundColor": "transparent"
        }
    ],

    "bracket-pair-colorizer-2.colors": [
        "#FE4A49",
        "#FE8548",
        "#FEC248"
    ],
    "bracket-pair-colorizer-2.showHorizontalScopeLine": false,

    "color-highlight.markerType": "dot-before",

    "material-icon-theme.files.associations": {
        ".bash_profile": "settings",
        ".bashrc": "settings",
        ".csslintrc": "settings",
        ".eslintrc.json": "settings",
        ".gitignore_global": "git",
        ".minttyrc": "settings",
        "coffeelint.json": "settings",
        "formatter.xml": "settings",
        "settings.json": "editorconfig",
        "todo.txt": "todo"
    },
    "material-icon-theme.folders.associations": {
        ".settings": "config",
    },

    "trailing-spaces.highlightCurrentLine": false,
    "trailing-spaces.includeEmptyLines": false,
    "trailing-spaces.trimOnSave": true,

    //* HTML
    "auto-rename-tag.activationOnLanguage": [
        "html",
        "xaml",
        "xml",
    ],

    "[html]": {
        "editor.tabSize": 2,
    },
    "html.format.indentInnerHtml": true,
    "html.format.wrapAttributes": "force-aligned",
    "html.format.wrapLineLength": 100,

    "htmlhint.options": {
        "alt-require": true,
        "attr-lowercase": true,
        "attr-no-duplication": true,
        "attr-unsafe-chars": true,
        "attr-value-double-quotes":  true,
        "csslint": true,
        "doctype-first": true,
        "id-unique": true,
        "jshint": true,
        "space-tab-mixed-disabled": true,
        "spec-char-escape": true,
        "tagname-lowercase": true,
        "title-require": true,
    },

    "liveServer.settings.host": "localhost",
    "liveServer.settings.port": 6000,

    //* Java
    "java.completion.guessMethodArguments": true,
    "java.configuration.updateBuildConfiguration": "automatic",
    "java.errors.incompleteClasspath.severity": "ignore",
    "java.format.settings.profile": "Sandeep",
    // TODO: Replace File location
    "java.format.settings.url": "path to formatter.xml",
    "java.signatureHelp.enabled": true,
    
    //* JavaScript
    "eslint.autoFixOnSave": true,

    "javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
    "javascript.format.placeOpenBraceOnNewLineForControlBlocks": true,
    "javascript.format.placeOpenBraceOnNewLineForFunctions": true,

    //* PowerShell
    "powershell.codeFormatting.openBraceOnSameLine": false,

    //* R
    "r.dependencyChecks": false,
    "r.editor.bracesOnNewLine": true,
    "r.editor.spaceBeforeCurly": false,
    "r.editor.tabSize": 4,
    "r.linting.enable": true,
    "r.linting.openCurlyPosition": false,
    "r.linting.pascalCase": false,

    //* Source Control
    "git.autofetch": true,

    "team.showWelcomeMessage": false,
}